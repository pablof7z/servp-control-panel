				<div class="rt-grid-12">
					<div class="rt-block">
						<div id="rt-mainbody">
							<div class="rt-joomla">
								<div class="rt-article">
									<div class="rt-headline">
										<h1 class="rt-article-title"><%= yield :title %></h1>

										<div class="clear"></div>
									</div>

