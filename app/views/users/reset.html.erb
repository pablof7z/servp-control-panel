<% content_for :title do %>Password Reset<% end %>

<% form_for @user, :url => { :action => 'reset' } do |f| %>
	<%= f.error_messages %>

	<div style="text-align: center; padding-top: 20px;">
	<table id="register" style="float: center;">
		<tr>
			<td class="keyword"><%= f.label :password %></td>
		</tr>

		<tr>
			<td><%= f.password_field :password %></td>
		</tr>

		<tr>
			<td class="keyword"><%= f.label :password_confirmation %></td>
		</tr>

		<tr>
			<td><%= f.password_field :password_confirmation %></td>
		</tr>

		<tr>
			<td class="buttons"><%= f.submit "Reset Password" %></td>
		</tr>
	</table>
</div>
<% end %>
